{
    "name": "antidot-fw/tactician",
    "description": "Tactician Command bus adapter for Antidot Framework.",
    "keywords": [
        "psr-11",
        "tacticican",
        "command-bus"
    ],
    "type": "library",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "kpicaza"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "league/tactician": "^1.0",
        "league/tactician-container": "^2.0",
        "psr/container": "^1.0.0"
    },
    "require-dev": {
        "phpro/grumphp": "^1.0",
        "phpunit/phpunit": "^9.0",
        "infection/infection": "^0.20 || ^0.21",
        "squizlabs/php_codesniffer": "^3.4",
        "symfony/var-dumper": "^5.1",
        "vimeo/psalm": "^4.4"
    },
    "autoload": {
        "psr-4": {
            "Antidot\\Tactician\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AntidotTest\\Tactician\\": "test"
        }
    },
    "scripts": {
        "check-all": [
            "@cs-check",
            "@psalm",
            "@test",
            "@infection"
        ],
        "cs-check": "phpcs src --colors",
        "cs-fix": "phpcbf src --colors",
        "infection": "XDEBUG_MODE=coverage infection",
        "psalm": "psalm",
        "test": "phpunit --colors=always"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laminas": {
            "config-provider": "Antidot\\Tactician\\Container\\Config\\ConfigProvider"
        }
    }
}
